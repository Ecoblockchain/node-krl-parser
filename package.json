{
  "name": "krl-parser",
  "version": "0.5.0",
  "description": "Parse KRL source code into an AST",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "scripts": {
    "start": "onchange 'src/' 'tests/' -e 'src/grammar.js' -i -- npm test -s",
    "build": "nearleyc src/grammar.ne > src/grammar.js",
    "test": "npm run build -s && node tests | tap-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farskipper/node-krl-parser.git"
  },
  "keywords": [
    "pico-engine",
    "krl",
    "parser"
  ],
  "author": "farskipper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/farskipper/node-krl-parser/issues"
  },
  "homepage": "https://github.com/farskipper/node-krl-parser#readme",
  "devDependencies": {
    "diff-lines": "^1.1.0",
    "karl42": "^1.1.1",
    "krl-generator": "^0.1.0",
    "lodash": "^4.13.1",
    "onchange": "^2.4.0",
    "tap-min": "^1.1.0",
    "tape": "^4.5.1"
  },
  "dependencies": {
    "excerpt-at-line-col": "^1.0.0",
    "line-column": "^1.0.2",
    "nearley": "^2.5.0"
  }
}
